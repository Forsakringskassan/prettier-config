{
    "extends": [
        "@tsconfig/strictest/tsconfig.json",
        "@tsconfig/node20/tsconfig.json"
    ],
    "compilerOptions": {
        "rootDir": "${configDir}/src",
        "outDir": "${configDir}/dist",

        "emitDeclarationOnly": true,
        "declaration": true,

        "module": "esnext",
        "moduleResolution": "bundler"
    },
    "include": ["./src/**/*.ts"]
}
